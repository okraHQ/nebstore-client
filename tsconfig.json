{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["ES2015", "ES2016", "ES2018", "ES2021"],
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "incremental": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "declaration": true,
  },
  "exclude": ["dump/**/*.ts", "dist"]
}
